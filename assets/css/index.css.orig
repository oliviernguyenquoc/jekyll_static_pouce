/* ------------------------- */

/* NavBar */

nav{
  box-shadow: none;
}

#navbar{
  position: fixed;
  width: 100%;
  z-index: 1000;
}

#navbar.default {
  box-shadow: none;
  padding-top: 20px;
  -webkit-transition: all 0.4s;
  -moz-transition: all 0.4s;
  -ms-transition: all 0.4s;
  -o-transition: all 0.4s;
  transition: all 0.4s;
}

#navbar.default #header-nav-buttons {
  top: 34px;
  -webkit-transition: all 0.4s;
  -moz-transition: all 0.4s;
  -ms-transition: all 0.4s;
  -o-transition: all 0.4s;
  transition: all 0.4s;
}

#navbar.default a.btn-connexion, #navbar.default nav ul li a  {
  color: white;
  -webkit-transition: all 0.4s;
  -moz-transition: all 0.4s;
  -ms-transition: all 0.4s;
  -o-transition: all 0.4s;
  transition: all 0.4s;
}

#navbar.sticky {
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2);
  background: #ffffff;
  -webkit-transition: all 0.4s;
  -moz-transition: all 0.4s;
  -ms-transition: all 0.4s;
  -o-transition: all 0.4s;
  transition: all 0.4s;
}

#navbar.sticky #header-nav-buttons {
  top: 14px;
  -webkit-transition: all 0.4s;
  -moz-transition: all 0.4s;
  -ms-transition: all 0.4s;
  -o-transition: all 0.4s;
  transition: all 0.4s;
}

#navbar.sticky a.btn-connexion, #navbar.sticky nav ul li a {
  color: black;
  -webkit-transition: all 0.4s;
  -moz-transition: all 0.4s;
  -ms-transition: all 0.4s;
  -o-transition: all 0.4s;
  transition: all 0.4s;
}

.menu nav ul{
	display: inline-block;
	margin-right: 7em;
}

.menu nav #nav-desktop a{
	padding: 0 20px;
	text-transform: uppercase;
	color: white;
}

/* Scroll btn */
.menu .button-collapse {
  color: #26a69a;
}

/* Logo */
.menu .brand-logo{
	padding-left: 25px;
	padding-top: 6px;
}

/* SignUp and LogIn Buttons */
.menu #header-nav-buttons {
	position: fixed;
	right: 0px;
	top: 14px;
	padding-right: 23px;
}

.menu .btn-connexion{
	border: 1px solid #FFFFFF;
	border-radius: 2px;
	text-transform: none;
}

.menu .btn-signup{
	color: black;
	background: #FFFFFF;
	border: 1px solid #FFFFFF;
	border-radius: 2px;
	text-transform: none;
}

.menu .side-nav{
  padding: 0 40px;
  z-index: 1000;
}

