/* ------------------------- */

#firstscreen .parallax-container {
	min-height: 380px;
	line-height: 0;
	height: 100vh;
	color: #26a69a;
	background: rgba(47,48,54,0.30);
	border: 1px solid #979797;
}

#firstscreen .parallax{
  overflow: hidden;
}
	
#firstscreen .parallax img{
	width: 100%;
  height: inherit;
}

#firstscreen #title{
	font-size: 80px;
}


#firstscreen #index-banner{
  padding-top: 130px;
}

#firstscreen #FAB{
  position: absolute;
  top: 88vh;
  z-index: 100;
  left:0;
  right:0;
  margin-left:auto;
  margin-right:auto;
}

/* Pre-registration form */

#pre_registration_form{
  margin-top: 30px;
}

/* Registration form */

#registration_form .input-field div.error{
  position: relative;
  top: -1rem;
  left: 0rem;
  font-size: 0.8rem;
  color:#FF4081;
  -webkit-transform: translateY(0%);
  -ms-transform: translateY(0%);
  -o-transform: translateY(0%);
  transform: translateY(0%);
}

/* label underline focus color */
#registration_form .input-field input[type=text]:focus {
  border-bottom: 1px solid #ff4081;
  box-shadow: 0 1px 0 0 #ff4081;
}
/* valid color */
#registration_form .input-field input[type=text].valid {
  border-bottom: 1px solid #26a69a;
  box-shadow: 0 1px 0 0 #26a69a;
}
/* invalid color */
#registration_form .input-field input[type=text].invalid {
  border-bottom: 1px solid #ff4081;
  box-shadow: 0 1px 0 0 #ff4081;
}

/* Add red star before label of required inputs */
.required:before {
  content: "* ";
  color: red;
}

